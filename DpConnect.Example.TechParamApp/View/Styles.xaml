<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--ИСПОЛЬЗУЕМЫЕ ЦВЕТА-->
    <SolidColorBrush x:Key="ColorText1Brush" Color="#216554"/>
    <SolidColorBrush x:Key="ColorBack1Brush" Color="White"/>
    <SolidColorBrush x:Key="ColorBack2Brush" Color="#A7CDC3"/>
    <SolidColorBrush x:Key="ColorGrid1Brush" Color="LightGray"/>
    <SolidColorBrush x:Key="ColorActiveBack1Brush" Color="LightGoldenrodYellow"/>
    <SolidColorBrush x:Key="ColorBackBot1Brush" Color="Gray"/>
    
    
    <!-- ПОЛЯ И ЛЕЙБЛЫ -->
    <Style TargetType="TextBox" x:Key="TextboxStyle">
        <Setter Property="Margin" Value="4"/>
        <Setter Property="BorderThickness" Value="0,0,0,0"/>
    </Style>
    <Style TargetType="TextBox" x:Key="TextboxRead" BasedOn="{StaticResource TextboxStyle}">
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="Grid.Column" Value="0"/>
    </Style>
    <Style TargetType="TextBox" x:Key="TextboxEdit" BasedOn="{StaticResource TextboxStyle}">
        <Setter Property="Grid.Column" Value="1"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="BorderBrush" Value="{StaticResource ColorGrid1Brush}"/>
    </Style>
    
    

</ResourceDictionary>